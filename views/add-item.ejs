<%- include('partials/_header', { title: 'Add Item', user: user }) %>

<div class="max-w-2xl mx-auto mt-8 animate-slide-up">
    
    <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent inline-block">
            Add New Item
        </h1>
        <p class="text-gray-500 mt-2">Expand your inventory catalog.</p>
    </div>

    <form action="/items" method="POST" class="space-y-6">
        
        <% if (typeof error != 'undefined' && error) { %>
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 p-4 rounded-2xl text-center text-sm">
                <%= error %>
            </div>
        <% } %>

        <div class="bg-[#0a0a0a] border border-[#1f1f1f] p-6 md:p-8 rounded-3xl shadow-2xl">
            
            <div class="mb-6 group">
                <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Item Name</label>
                <input type="text" name="name" required placeholder="e.g. Sona Masoori Rice"
                    class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all placeholder-gray-700">
            </div>

            <div class="mb-6 group">
                <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Category</label>
                <div class="relative">
                    <select name="category" class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all appearance-none cursor-pointer">
                        <option value="Rice">Rice</option>
                        <option value="Dal/Pulses">Dal / Pulses</option>
                        <option value="Oil">Oil</option>
                        <option value="Spices">Spices</option>
                        <option value="Sugar/Salt">Sugar / Salt</option>
                        <option value="Flour">Flour (Atta)</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="absolute right-5 top-1/2 -translate-y-1/2 pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-500">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="group">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Buy Price (₹)</label>
                    <input type="number" step="0.01" name="buyPricePerKg" required placeholder="0.00"
                        class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all font-mono placeholder-gray-700">
                </div>
                <div class="group">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-secondary transition-colors">Sell Price (₹)</label>
                    <input type="number" step="0.01" name="sellPricePerKg" required placeholder="0.00"
                        class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all font-mono placeholder-gray-700">
                </div>
            </div>
        </div>

        <div class="flex gap-3">
            <a href="/dashboard" class="px-6 py-4 rounded-2xl border border-gray-800 text-gray-400 hover:text-white hover:bg-white/5 font-medium transition-colors">
                Cancel
            </a>
            <button type="submit" class="flex-1 bg-white text-black py-4 rounded-2xl font-bold text-lg hover:bg-gray-200 transition-all transform hover:scale-[1.01] shadow-lg shadow-white/10 flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                  <path fill-rule="evenodd" d="M9 4.5a.75.75 0 0 1 .721.544l.813 2.846a3.75 3.75 0 0 0 2.576 2.576l2.846.813a.75.75 0 0 1 0 1.442l-2.846.813a3.75 3.75 0 0 0-2.576 2.576l-.813 2.846a.75.75 0 0 1-1.442 0l-.813-2.846a3.75 3.75 0 0 0-2.576-2.576l-2.846-.813a.75.75 0 0 1 0-1.442l2.846-.813a3.75 3.75 0 0 0 2.576-2.576l.813-2.846A.75.75 0 0 1 9 4.5ZM18 1.5a.75.75 0 0 1 .728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 0 1 0 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 0 1-1.456 0l-.258-1.036a2.625 2.625 0 0 0-1.91-1.91l-1.036-.258a.75.75 0 0 1 0-1.456l1.036-.258a2.625 2.625 0 0 0 1.91-1.91l.258-1.036A.75.75 0 0 1 18 1.5ZM16.5 15a.75.75 0 0 1 .712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 0 1 0 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 0 1-1.422 0l-.395-1.183a1.5 1.5 0 0 0-.948-.948l-1.183-.395a.75.75 0 0 1 0-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0 1 16.5 15Z" clip-rule="evenodd" />
                </svg>
                Save Item
            </button>
        </div>
    </form>
</div>

<%- include('partials/_footer') %>