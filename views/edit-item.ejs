<%- include('partials/_header', { title: 'Edit Item', user: user }) %>

<div class="max-w-2xl mx-auto mt-8 animate-slide-up">
    
    <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold text-white">Edit Item</h1>
        <p class="text-gray-500 mt-2">Update details or remove stock.</p>
    </div>

    <form action="/items/update/<%= item._id %>" method="POST" class="space-y-6">
        
        <% if (typeof error != 'undefined' && error) { %>
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 p-4 rounded-2xl text-center text-sm">
                <%= error %>
            </div>
        <% } %>

        <div class="bg-[#0a0a0a] border border-[#1f1f1f] p-6 md:p-8 rounded-3xl shadow-2xl">
            
            <div class="mb-6 group">
                <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Item Name</label>
                <input type="text" name="name" value="<%= item.name %>" required
                    class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all">
            </div>

            <div class="mb-6 group">
                <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Category</label>
                <div class="relative">
                    <select name="category" class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all appearance-none cursor-pointer">
                        <option value="Rice" <%= item.category === 'Rice' ? 'selected' : '' %>>Rice</option>
                        <option value="Dal/Pulses" <%= item.category === 'Dal/Pulses' ? 'selected' : '' %>>Dal / Pulses</option>
                        <option value="Oil" <%= item.category === 'Oil' ? 'selected' : '' %>>Oil</option>
                        <option value="Spices" <%= item.category === 'Spices' ? 'selected' : '' %>>Spices</option>
                        <option value="Sugar/Salt" <%= item.category === 'Sugar/Salt' ? 'selected' : '' %>>Sugar / Salt</option>
                        <option value="Flour" <%= item.category === 'Flour' ? 'selected' : '' %>>Flour</option>
                        <option value="Other" <%= item.category === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                    <div class="absolute right-5 top-1/2 -translate-y-1/2 pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-500">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="group">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-primary transition-colors">Buy (₹)</label>
                    <input type="number" step="0.01" name="buyPricePerKg" value="<%= item.buyPricePerKg %>" required
                        class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all font-mono">
                </div>
                <div class="group">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-widest mb-2 ml-1 group-focus-within:text-secondary transition-colors">Sell (₹)</label>
                    <input type="number" step="0.01" name="sellPricePerKg" value="<%= item.sellPricePerKg %>" required
                        class="w-full bg-black border border-gray-800 text-white text-lg px-5 py-4 rounded-2xl focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all font-mono">
                </div>
            </div>
        </div>

        <div class="flex flex-col-reverse md:flex-row gap-3">
            <button type="button" onclick="confirmDelete()" class="px-6 py-4 rounded-2xl bg-red-500/10 text-red-500 font-bold hover:bg-red-500 hover:text-white transition-colors border border-red-500/20">
                Delete Item
            </button>
            <div class="flex-1 flex gap-3">
                <a href="/dashboard" class="flex-1 md:flex-none px-6 py-4 rounded-2xl border border-gray-800 text-gray-400 hover:text-white hover:bg-white/5 font-medium transition-colors text-center">
                    Cancel
                </a>
                <button type="submit" class="flex-1 bg-white text-black py-4 rounded-2xl font-bold text-lg hover:bg-gray-200 transition-all transform hover:scale-[1.01] shadow-lg shadow-white/10">
                    Update
                </button>
            </div>
        </div>
    </form>
    
    <form id="deleteForm" action="/items/delete/<%= item._id %>" method="POST" class="hidden"></form>
</div>

<script>
    function confirmDelete() {
        if(confirm('Are you sure you want to delete this item permanently?')) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>

<%- include('partials/_footer') %>