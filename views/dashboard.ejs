<%- include('partials/_header', { title: 'Dashboard', user: user }) %>

<div class="animate-fade-in">
    
    <div class="flex flex-col gap-4 mb-8 sticky top-20 z-40 bg-dark/90 backdrop-blur-xl py-2 -mx-4 px-4 md:mx-0 md:px-0">
        <div class="flex gap-3">
            <div class="relative flex-grow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="absolute left-4 top-3.5 w-5 h-5 text-gray-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                </svg>
                <input 
                    type="text" 
                    id="searchInput"
                    placeholder="Search items..." 
                    class="w-full pl-12 pr-4 py-3 bg-card border border-border rounded-xl text-white placeholder-gray-600 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all shadow-lg"
                >
            </div>
            
            <a href="/items/add" class="bg-primary hover:bg-indigo-600 text-white px-4 rounded-xl flex items-center justify-center transition-colors shadow-lg shadow-primary/20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </a>
        </div>
    </div>

    <div id="inventoryGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% if (typeof items != 'undefined' && items.length > 0) { %>
            <% items.forEach(item => { %>
                
                <div class="item-card group relative bg-card border border-border rounded-2xl p-5 hover:border-gray-600 transition-all active:scale-[0.98] animate-slide-up">
                    
                    <a href="/items/edit/<%= item._id %>" class="absolute top-4 right-4 z-20 p-2 text-gray-500 hover:text-white bg-gray-800/50 rounded-lg backdrop-blur-sm transition-colors" onclick="event.stopPropagation();">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                        </svg>
                    </a>

                    <a href="/calculator?id=<%= item._id %>" class="block">
                        <div class="flex flex-col">
                            <span class="inline-block px-2 py-1 rounded-md bg-gray-800 text-gray-400 text-xs font-medium w-fit mb-2">
                                <%= item.category %>
                            </span>
                            
                            <h3 class="text-xl font-bold text-white mb-1 group-hover:text-primary transition-colors item-name">
                                <%= item.name %>
                            </h3>

                            <div class="mt-3 flex items-baseline gap-1">
                                <span class="text-2xl font-bold text-secondary">â‚¹<%= item.sellPricePerKg %></span>
                                <span class="text-sm text-gray-500">/kg</span>
                            </div>
                        </div>
                    </a>

                </div>

            <% }) %>
        <% } else { %>
            <div class="col-span-full text-center py-20">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-900 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-600">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3.252a.75.75 0 100-1.5.75.75 0 000 1.5zm-3.25 3.252a.75.75 0 100-1.5.75.75 0 000 1.5z" />
                    </svg>
                </div>
                <p class="text-gray-500">No items found. Add one above!</p>
            </div>
        <% } %>
    </div>

</div>

<script>
    const searchInput = document.getElementById('searchInput');
    const cards = document.querySelectorAll('.item-card');

    searchInput.addEventListener('keyup', (e) => {
        const term = e.target.value.toLowerCase();
        
        cards.forEach(card => {
            const name = card.querySelector('.item-name').textContent.toLowerCase();
            if (name.includes(term)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });
</script>

<%- include('partials/_footer') %>