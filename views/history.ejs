<%- include('partials/_header', { title: 'Sales History', user: user }) %>

<div class="max-w-4xl mx-auto mt-8 animate-slide-up">
    
    <div class="flex justify-between items-end mb-8 px-2">
        <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-green-400 to-emerald-600 bg-clip-text text-transparent inline-block">
                Sales History
            </h1>
            <p class="text-gray-500 mt-2">Recent transactions log.</p>
        </div>
        <div class="bg-[#0a0a0a] px-6 py-3 rounded-2xl border border-[#1f1f1f] text-right shadow-lg">
            <p class="text-gray-500 text-xs uppercase tracking-wider font-bold mb-1">Total Profit</p>
            <p class="text-3xl font-bold text-secondary">
                ₹<%= totalProfit.toFixed(2) %>
            </p>
        </div>
    </div>

    <div class="bg-[#0a0a0a] border border-[#1f1f1f] rounded-3xl overflow-hidden shadow-2xl">
        <% if (transactions.length > 0) { %>
            <div class="divide-y divide-[#1f1f1f]">
                <% transactions.forEach(txn => { %>
                    <div class="p-6 flex justify-between items-center hover:bg-white/5 transition-colors group">
                        
                        <div class="flex items-center gap-5">
                            <div class="w-12 h-12 rounded-2xl bg-[#151515] flex items-center justify-center text-gray-500 border border-[#252525] group-hover:border-primary/50 group-hover:text-primary transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                                </svg>
                            </div>
                            <div>
                                <h2 class="text-white text-lg font-bold"><%= txn.itemName %></h2>
                                <div class="flex items-center gap-2 text-xs text-gray-500 font-mono mt-1">
                                    <span><%= new Date(txn.createdAt).toLocaleDateString() %></span>
                                    <span>•</span>
                                    <span><%= new Date(txn.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                                    <span>•</span>
                                    <span class="text-gray-400"><%= txn.weightGrams.toFixed(0) %>g</span>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-6">
                            <div class="text-right">
                                <div class="text-xl text-white font-bold tracking-tight">
                                    ₹<%= txn.price.toFixed(2) %>
                                </div>
                                <div class="text-xs font-bold uppercase tracking-wide <%= txn.profit >= 0 ? 'text-secondary' : 'text-error' %>">
                                    <%= txn.profit >= 0 ? '+' : '' %>₹<%= txn.profit.toFixed(2) %>
                                </div>
                            </div>

                            <form action="/history/delete/<%= txn._id %>" method="POST" onsubmit="return confirm('Remove this transaction record?');">
                                <button type="submit" class="p-3 rounded-xl text-gray-600 hover:bg-red-500/10 hover:text-red-500 transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                                      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                    </svg>
                                </button>
                            </form>
                        </div>

                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="p-24 text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-[#151515] mb-6 border border-[#252525]">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-600">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </div>
                <p class="text-gray-500 text-lg">No transactions recorded yet.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/_footer') %>